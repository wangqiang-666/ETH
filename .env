# V5-激进优化版实时交易系统 - 测试配置

# ===== 币安API配置 =====
# 测试用的API密钥 (请替换为您的真实密钥)
# 注意: 当前使用占位符密钥，仅用于测试
BINANCE_API_KEY=test_api_key_placeholder
BINANCE_API_SECRET=test_api_secret_placeholder

# 使用测试网 (安全起见)
BINANCE_TESTNET=true

# API请求窗口时间
BINANCE_RECV_WINDOW=5000

# ===== 交易配置 =====
# 交易对
TRADING_SYMBOL=ETHUSDT

# K线时间周期
TRADING_INTERVAL=1m

# ===== 服务器配置 =====
# Dashboard监控面板端口
DASHBOARD_PORT=3001

# ===== 风险控制配置 =====
# 最大日交易数
MAX_DAILY_TRADES=80

# 最大连续亏损次数
MAX_CONSECUTIVE_LOSSES=4

# 基础仓位大小 USDT
BASE_POSITION_SIZE=750

# 仓位倍数
POSITION_SIZE_MULTIPLIER=1.3

# ===== 技术指标配置 =====
# RSI配置
RSI_PERIOD=15
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65

# EMA配置
EMA_FAST=9
EMA_SLOW=27

# ===== 止损止盈配置 =====
# 止损比例 (1.7%)
STOP_LOSS=0.017

# 止盈层级
TAKE_PROFIT_LEVEL1=0.012
TAKE_PROFIT_LEVEL2=0.040
TAKE_PROFIT_LEVEL3=0.090

# 止盈权重
TAKE_PROFIT_WEIGHT1=0.70
TAKE_PROFIT_WEIGHT2=0.20
TAKE_PROFIT_WEIGHT3=0.10

# ===== 时间管理配置 =====
# 持仓时间 (分钟)
MIN_HOLDING_TIME=8
MAX_HOLDING_TIME=135
PROFIT_TAKING_TIME=30
COOLDOWN_PERIOD=45

# ===== 市场条件配置 =====
# 成交量和波动率
VOLUME_RATIO_MIN=0.7
VOLUME_CONFIRMATION_PERIOD=18
VOLATILITY_MIN=0.002
VOLATILITY_MAX=0.075
TREND_STRENGTH_THRESHOLD=0.005

# ===== 尾随止损配置 =====
TRAILING_STOP_ACTIVATION=0.010
TRAILING_STOP_DISTANCE=0.005

# ===== 开发配置 =====
# 开发模式
DEV_MODE=true
DEBUG_MODE=true

# 模拟交易模式 (不执行真实交易)
SIMULATION_MODE=true