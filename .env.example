# V5-激进优化版实时交易系统 - 环境变量配置

# ===== 币安API配置 =====
# 必填：从币安获取的API密钥
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# 可选：是否使用测试网 (true/false，默认false)
BINANCE_TESTNET=true

# 可选：API请求窗口时间 (毫秒，默认5000)
BINANCE_RECV_WINDOW=5000

# ===== 交易配置 =====
# 可选：交易对 (默认ETHUSDT)
TRADING_SYMBOL=ETHUSDT

# 可选：K线时间周期 (默认1m)
# 支持: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 8h, 12h, 1d, 3d, 1w, 1M
TRADING_INTERVAL=1m

# ===== 服务器配置 =====
# 可选：Dashboard监控面板端口 (默认3001)
DASHBOARD_PORT=3001

# ===== 数据库配置 =====
# 可选：数据库文件路径 (默认./data/trading.db)
DATABASE_PATH=./data/trading.db

# ===== 日志配置 =====
# 可选：日志级别 (debug, info, warn, error，默认info)
LOG_LEVEL=info

# 可选：日志文件路径 (默认./logs/)
LOG_PATH=./logs/

# ===== 风险控制配置 =====
# 可选：最大日交易数 (默认80)
MAX_DAILY_TRADES=80

# 可选：最大连续亏损次数 (默认4)
MAX_CONSECUTIVE_LOSSES=4

# 可选：基础仓位大小 USDT (默认750)
BASE_POSITION_SIZE=750

# 可选：仓位倍数 (默认1.3)
POSITION_SIZE_MULTIPLIER=1.3

# ===== 技术指标配置 =====
# 可选：RSI周期 (默认15)
RSI_PERIOD=15

# 可选：RSI超卖阈值 (默认35)
RSI_OVERSOLD=35

# 可选：RSI超买阈值 (默认65)
RSI_OVERBOUGHT=65

# 可选：快速EMA周期 (默认9)
EMA_FAST=9

# 可选：慢速EMA周期 (默认27)
EMA_SLOW=27

# ===== 止损止盈配置 =====
# 可选：止损比例 (默认0.017，即1.7%)
STOP_LOSS=0.017

# 可选：第一层止盈比例 (默认0.012，即1.2%)
TAKE_PROFIT_LEVEL1=0.012

# 可选：第二层止盈比例 (默认0.040，即4.0%)
TAKE_PROFIT_LEVEL2=0.040

# 可选：第三层止盈比例 (默认0.090，即9.0%)
TAKE_PROFIT_LEVEL3=0.090

# 可选：第一层止盈权重 (默认0.70，即70%)
TAKE_PROFIT_WEIGHT1=0.70

# 可选：第二层止盈权重 (默认0.20，即20%)
TAKE_PROFIT_WEIGHT2=0.20

# 可选：第三层止盈权重 (默认0.10，即10%)
TAKE_PROFIT_WEIGHT3=0.10

# ===== 时间管理配置 =====
# 可选：最小持仓时间 分钟 (默认8)
MIN_HOLDING_TIME=8

# 可选：最大持仓时间 分钟 (默认135)
MAX_HOLDING_TIME=135

# 可选：获利了结时间 分钟 (默认30)
PROFIT_TAKING_TIME=30

# 可选：冷却期 分钟 (默认45)
COOLDOWN_PERIOD=45

# ===== 市场条件配置 =====
# 可选：最小成交量比率 (默认0.7)
VOLUME_RATIO_MIN=0.7

# 可选：成交量确认周期 (默认18)
VOLUME_CONFIRMATION_PERIOD=18

# 可选：最小波动率 (默认0.002，即0.2%)
VOLATILITY_MIN=0.002

# 可选：最大波动率 (默认0.075，即7.5%)
VOLATILITY_MAX=0.075

# 可选：趋势强度阈值 (默认0.005，即0.5%)
TREND_STRENGTH_THRESHOLD=0.005

# ===== 尾随止损配置 =====
# 可选：尾随止损激活阈值 (默认0.010，即1.0%)
TRAILING_STOP_ACTIVATION=0.010

# 可选：尾随止损距离 (默认0.005，即0.5%)
TRAILING_STOP_DISTANCE=0.005

# ===== 通知配置 =====
# 可选：邮件通知 (true/false，默认false)
EMAIL_NOTIFICATIONS=false

# 可选：邮件服务器配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_TO=your_notification_email@gmail.com

# 可选：Webhook通知URL
WEBHOOK_URL=https://your-webhook-url.com/notify

# ===== 开发配置 =====
# 可选：开发模式 (true/false，默认false)
DEV_MODE=false

# 可选：调试模式 (true/false，默认false)
DEBUG_MODE=false

# 可选：模拟交易模式 (true/false，默认false)
# 注意：模拟模式下不会执行真实交易
SIMULATION_MODE=false