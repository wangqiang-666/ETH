# OKX API配置
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here
OKX_SANDBOX=false

# 代理服务器配置
HK_PROXY_URL=http://43.132.123.32:8080
USE_PROXY=true

# Web服务器配置
WEB_PORT=3001
WEB_HOST=localhost
CORS_ORIGIN=*

# 交易配置
DEFAULT_SYMBOL=ETH-USDT-SWAP
DEFAULT_LEVERAGE=3
MAX_POSITIONS=5

# 风险管理
MAX_DAILY_LOSS=0.05
MAX_POSITION_SIZE=0.2
STOP_LOSS_PERCENT=0.02
TAKE_PROFIT_PERCENT=0.04

# 技术指标参数
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
BOLLINGER_STD_DEV=2
KDJ_PERIOD=9
WILLIAMS_PERIOD=14

# 策略参数
SIGNAL_THRESHOLD=0.7
MIN_WIN_RATE=0.65
BACKTEST_DAYS=30

# 机器学习API配置
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
ML_MODEL_PATH=./models
USE_ML_ANALYSIS=true
ML_CONFIDENCE_THRESHOLD=0.6

# 监控配置
MONITOR_INTERVAL=5000
LOG_LEVEL=info
ENABLE_NOTIFICATIONS=true

# Kronos 在线推理服务配置
KRONOS_ENABLED=true
KRONOS_BASE_URL=http://localhost:8001
KRONOS_TIMEOUT_MS=1200
KRONOS_INTERVAL=1H
KRONOS_LOOKBACK=480
KRONOS_LONG_THRESHOLD=0.62
KRONOS_SHORT_THRESHOLD=0.62
KRONOS_MIN_CONFIDENCE=0.55

# ===== Strategy Oscillators & Gating (New) =====
USE_KDJ=false
USE_WILLIAMS=false

GATE_ADX_ENABLED=false
GATE_ADX_MIN=25

GATE_VOLUME_ENABLED=false
GATE_OBV_SLOPE_MIN=0
GATE_VOLUME_RATIO_MIN=0.7

GATE_VOLATILITY_ENABLED=false
GATE_ATR_PCT_MIN=0.005
GATE_SQUEEZE_BLOCK=true

# Kronos blending cap
KRONOS_ALPHA_MAX=0.6